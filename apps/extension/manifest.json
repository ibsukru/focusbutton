{
  "manifest_version": 3,
  "name": "FocusButton",
  "version": "1.0.0",
  "description": "Track your focus time with a simple press and hold button",
  "permissions": [
    "notifications",
    "alarms",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "web_accessible_resources": [{
    "resources": ["timer-end.mp3", "notification.html", "offscreen.html"],
    "matches": ["<all_urls>"]
  }]
}
